{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@users/*": ["src/users/*"],
      "@pictures/*": ["src/pictures/*"],
      "@categories/*": ["src/categories/*"],
      "@albums/*": ["src/albums/*"],
      "@profiles/*": ["src/profiles/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src", "scripts", "test"]
}
